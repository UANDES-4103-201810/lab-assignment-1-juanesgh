<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login App"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="10dp" android:id="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:layout_constraintBottom_toBottomOf="parent"
            android:layout_constraintLeft_toLeftOf="10dp"
            android:layout_constraintTop_toTopOf="30dp"
            android:id="@+id/1" tools:layout_editor_absoluteY="10dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_constraintBottom_toBottomOf="parent"
            android:layout_constraintLeft_toLeftOf="10dp"
            android:layout_constraintTop_toTopOf="50dp"
            android:layout_constraintRight_toRightOf="parent" tools:layout_editor_absoluteY="64dp"
            android:id="@+id/2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="348dp"/>
    <EditText
            android:layout_width="112dp"
            android:layout_height="26dp"
            android:inputType="textPersonName"
            android:text="UserName"
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintStart_toEndOf="@+id/1"
            android:layout_marginStart="9dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="261dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp" app:layout_constraintStart_toEndOf="@+id/2"
            android:layout_marginStart="19dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:id="@+id/button" android:layout_marginEnd="173dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            android:layout_marginTop="43dp" app:layout_constraintTop_toBottomOf="@+id/editText2"
            android:layout_marginBottom="535dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            android:onClick="sendInfo"/>
</android.support.constraint.ConstraintLayout>